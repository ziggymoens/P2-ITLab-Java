<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <Label fx:id="loginLabel" text="Login" />
                        <TextField fx:id="loginVeld" maxHeight="-Infinity" maxWidth="-Infinity" />
                        <Label fx:id="loginError" text="Errorveld" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER">
                     <children>
                        <Label fx:id="wachtwoordLabel" text="Wachtwoord" />
                        <TextField fx:id="wachtwoordVeld" maxHeight="-Infinity" maxWidth="-Infinity" />
                        <Label fx:id="wachtwoordError" text="Errorveld" />
                     </children>
                  </VBox>
                  <Button fx:id="loginButton" mnemonicParsing="false" text="Login">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="WELKOM" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
