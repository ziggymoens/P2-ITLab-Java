<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root prefHeight="700.0" prefWidth="1200.0" type="BorderPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox fx:id="lblaankondiging" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="sessieTitel" />
            <Label text="Voeg aankondiging toe" />
            <TextArea fx:id="aankondigingTekst" prefHeight="200.0" prefWidth="200.0" />
            <CheckBox fx:id="automatischeHerinnering" mnemonicParsing="false" text="Automatische herinnering" />
            <ChoiceBox fx:id="herinneringKeuze" prefWidth="150.0" value="1 dag">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="1 dag" />
                     <String fx:value="2 dagen" />
                     <String fx:value="3 dagen" />
                     <String fx:value="7 dagen" />
                  </FXCollections>
               </items>
            </ChoiceBox>
            <Button fx:id="voegToe" mnemonicParsing="false" text="Submit" />
         </children>
      </VBox>
   </center>
</fx:root>
