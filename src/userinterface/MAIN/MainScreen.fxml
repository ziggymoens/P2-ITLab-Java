<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<fx:root prefHeight="900.0" prefWidth="1400.0" type="BorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="1080.0">
              <menus>
                <Menu mnemonicParsing="false" text="Sessie">
                  <items>
                    <MenuItem fx:id="newSessie" mnemonicParsing="false" text="Nieuwe sessie..." />
                        <MenuItem fx:id="openSessie" mnemonicParsing="false" text="Open sessie..." />
                        <Menu mnemonicParsing="false" text="Voeg toe aan sessie...">
                          <items>
                            <MenuItem fx:id="addAankondiging" mnemonicParsing="false" text="Aankondiging" />
                              <MenuItem fx:id="addFeedback" mnemonicParsing="false" text="Feedback" />
                              <MenuItem fx:id="addInschrijving" mnemonicParsing="false" text="Inschrijving" />
                              <MenuItem fx:id="addMedia" mnemonicParsing="false" text="Media" />
                          </items>
                        </Menu>
                        <MenuItem fx:id="deleteSessie" mnemonicParsing="false" text="Verwijder sessie..." />
                  </items>
                </Menu>
                <Menu fx:id="menuGebruiker" mnemonicParsing="false" text="Gebruiker">
                  <items>
                    <MenuItem fx:id="gebruikerNieuweGebruiker" mnemonicParsing="false" text="Nieuwe gebruiker..." />
                        <MenuItem fx:id="gebruikerOpenGebruiker" mnemonicParsing="false" text="Open gebruiker..." />
                        <MenuItem fx:id="gebruikerVerwijderGebruiker" mnemonicParsing="false" text="Verwijder gebruiker..." />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Sessiekalender">
                    <items>
                      <MenuItem fx:id="openKalender" mnemonicParsing="false" text="Open kalender..." />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem fx:id="about" mnemonicParsing="false" text="About" />
                        <MenuItem fx:id="help" mnemonicParsing="false" text="Help" />
                     </items>
                  </Menu>
              </menus>
            </MenuBar>
            <MenuBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="30.0" prefWidth="200.0">
              <menus>
                <Menu mnemonicParsing="false" text="Account">
                  <items>
                        <MenuItem disable="true" mnemonicParsing="false">
                           <graphic>
                              <HBox prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <ImageView fx:id="profielFoto" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                       <HBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </HBox.margin>
                                    </ImageView>
                                    <Label fx:id="gebruikersnaam" alignment="CENTER" text="Label" textAlignment="CENTER" />
                                 </children>
                              </HBox>
                           </graphic>
                        </MenuItem>
                        <MenuItem fx:id="gebruikerGegevens" mnemonicParsing="false" text="Gegevens..." />
                    <MenuItem fx:id="gebruikerInstellingen" mnemonicParsing="false" text="Instellingen..." />
                        <MenuItem fx:id="gebruikerUitloggen" mnemonicParsing="false" text="Uitloggen..." />
                        <MenuItem fx:id="gebruikerAfsluiten" mnemonicParsing="false" text="Afsluiten" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </HBox>
   </top>
</fx:root>
