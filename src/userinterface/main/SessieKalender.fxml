<fx:root prefHeight="738.0" prefWidth="1400.0" type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button fx:id="btnNieuwAj" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Nieuw Academiejaar">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="lblErrorAj" text="Academiejaren mogen niet overlappen" textFill="RED" visible="false">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <VBox layoutY="250.0" prefWidth="200.0" spacing="100.0" AnchorPane.leftAnchor="20.0">
         <children>
            <VBox alignment="CENTER" prefWidth="200.0">
               <children>
                  <Label text="Academiejaar">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="cbAj" prefHeight="30.0" prefWidth="250.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ComboBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" prefWidth="200.0">
               <children>
                  <Label text="Maand">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="cbMaand" prefHeight="30.0" prefWidth="250.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ComboBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="738.0" prefWidth="500.0" AnchorPane.leftAnchor="240.0" AnchorPane.rightAnchor="660.0">
         <children>
            <Label text="Academiejaren">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <TableView fx:id="table" prefHeight="600.0" prefWidth="500.0">
               <columns>
                  <TableColumn fx:id="aj" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Academiejaar" />
                  <TableColumn fx:id="start" prefWidth="75.0" text="Start Datum" />
                  <TableColumn fx:id="eind" prefWidth="75.0" text="Eind Datum" />
                  <TableColumn fx:id="aantalSessies" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="Sessies" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="738.0" prefWidth="600.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Label text="Sessies">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <TableView prefHeight="600.0" prefWidth="600.0">
              <columns>
                  <TableColumn fx:id="titel" maxWidth="275.0" minWidth="275.0" prefWidth="275.0" text="Titel" />
                <TableColumn fx:id="datum" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Datum" />
                  <TableColumn fx:id="stad" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Stad" />
                <TableColumn fx:id="aanwezigen" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" text="Aanwezigen" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</fx:root>
