<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" type="BorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="gebruikersNaam" maxWidth="250.0" prefHeight="30.0" promptText="Gerbuikersnaam...">
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="wachtwoord" maxWidth="250.0" prefHeight="30.0" promptText="Wachtwoord...">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="inloggenButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="250.0" style="-fx-background-color: rgb(64,110,142);" text="Inloggen" textFill="WHITE">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Welkom" BorderPane.alignment="BOTTOM_CENTER">
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
         <font>
            <Font name="Arial Bold" size="42.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <AnchorPane prefHeight="103.0" prefWidth="601.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="logo" fitHeight="112.0" fitWidth="159.0" layoutX="441.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
   </bottom>
</fx:root>
