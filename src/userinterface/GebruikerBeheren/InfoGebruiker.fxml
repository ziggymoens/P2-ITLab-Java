<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="400.0" prefWidth="600.0" type="BorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <Label text="Selecteer een gebruiker:" />
                  <HBox prefHeight="100.0" prefWidth="248.0">
                     <children>
                        <TextField fx:id="txtFieldUser" promptText="Zoek gebruiker..">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="zoekKnop" mnemonicParsing="false" prefHeight="27.0" prefWidth="70.0" text="Zoek">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                        <ListView fx:id="listView" />
                        <Button fx:id="nieuw" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Nieuwe gebruiker aanmaken">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="20.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </VBox>
                <VBox alignment="CENTER" prefHeight="370.0" prefWidth="204.0">
                    <children>
                        <Label text="Details Gebruiker">
                            <font>
                                <Font size="14.0" />
                            </font>
                     <VBox.margin>
                        <Insets bottom="15.0" left="5.0" right="5.0" />
                     </VBox.margin>
                        </Label>
                        <VBox alignment="CENTER">
                            <children>
                                <Label text="Naam">
                                    <VBox.margin>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="naamgebruiker" editable="false" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" layoutX="10.0" layoutY="104.0">
                            <children>
                                <Label text="Gebruikersnaam Chamilo">
                                    <VBox.margin>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="gebruikersnaam" editable="false" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" layoutX="10.0" layoutY="204.0">
                            <children>
                                <Label text="Status">
                                    <VBox.margin>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="status" editable="false" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" layoutX="10.0" layoutY="263.0">
                            <children>
                                <Label text="Type profiel">
                                    <VBox.margin>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="type" editable="false" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" layoutX="10.0" layoutY="292.0">
                            <children>
                                <HBox alignment="CENTER">
                                    <children>
                                        <Button fx:id="bewerken" mnemonicParsing="false" text="Bewerken">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </HBox.margin>
                                        </Button>
                                        <Button fx:id="verwijderen" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Verwijderen">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </HBox.margin>
                                        </Button>
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </HBox>
    </center>


</fx:root>
